

# grant all admin users of ubuntu linux nopassws sudo access via /etc/sudoers.d/admin config file
if [[ "$(uname)" == "Linux" ]]; then
  if ! [[ -f /etc/sudoers.d/admin ]]; then
    echo "Granting all admin users nopasswd sudo access..."
    echo "%admin ALL=(ALL) NOPASSWD:ALL" | sudo tee /etc/sudoers.d/admin
  fi
fi

if [[ "$(uname)" == "Linux" ]]; then
  if ! [[ -f /etc/sudoers.d/admin ]]; then
    echo "Granting all admin users nopasswd sudo access..."
    echo "%admin ALL=(ALL) NOPASSWD:ALL" | sudo tee /etc/sudoers.d/admin
  fi
fi